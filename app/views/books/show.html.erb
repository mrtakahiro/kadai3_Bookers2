<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "sidebar", book: @book_new, user: @user %>
        <% if @book.user == current_user %>
          <%= link_to "destroy", book_path(@book), method: :delete %>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_user) do %>
              <%= image_tag @book_user.get_profile_image(100,100) %>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if current_user == @book_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-success btn-sm" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id),class:"btn btn-danger btn-sm", method: :delete, "date-confirm" => "本当に削除しますか？" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
