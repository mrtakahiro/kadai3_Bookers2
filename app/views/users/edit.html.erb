<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
        <div>
          <h4>Name</h4>
          <%= f.text_field :name %>
        </div>

        <div>
          <h4>Image</h4>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>

        <div>
          <h4>Introduction</h4>
          <%= f.text_area :introduction %>
        </div>

        <div><%= f.submit 'Update Book',class:"btn btn-secondary" %></div>
      <% end %>
    </div>
  </div>
</div>
